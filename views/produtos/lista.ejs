<%- include('../partials/header') %>
<%- include('../partials/menu') %>


<div class="container">
    <h1>Lista de Produtos</h1>

    <table border="1">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Preço (R$)</th>
        <th>Ações</th>
    </tr>
    <% produtos.forEach(produto => { %>
        <tr>
        <td><%= produto.id %></td>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.preco.toFixed(2) %></td>
        <td>
            <a href="/produtos/editar/<%= produto.id %>">Editar</a> |
            <a href="/produtos/deletar/<%= produto.id %>" onclick="return confirm('Confirma exclusão?')">Excluir</a>
        </td>
        </tr>
    <% }) %>
    </table>
</div>

<%- include('../partials/footer') %>
